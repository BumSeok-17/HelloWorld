<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProfileViewActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:layout_gravity="center_vertical"
        />
        <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="6"
                android:layout_gravity="center_vertical"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_group_add_black_24dp"
                android:layout_gravity="center_vertical"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_chat_black_24dp"
                android:layout_gravity="center_vertical"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:src="@drawable/ic_report_problem_black_24dp"
                android:layout_gravity="center_vertical"
        />

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"

    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/profileimg"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textStyle="bold"
                    android:paddingLeft="20dp"
                    android:paddingTop="10dp"
                    android:textSize="30dp"
                    android:text="범석 강"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="서울특별시, 대한민국"/>
            <EditText
                    android:layout_width="380dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="사용자 정보"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="사용자가 모두에게 공개하기로 동의한 정보를 출력하는 부분 : 간단한 자기소개 혹은 어플에서 기본적으로 출력하는 정보 외에 알리고 싶은 정보"
            />
            <EditText
                    android:layout_width="380dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:enabled="false"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="호스팅 정보"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="호스팅 가능 // 아마도 호스팅 가능 // 호스팅 하지 않음"/>
            <EditText
                    android:layout_width="380dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
            />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="관심사"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp"
                    android:text="기타연주"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:text="음악, 책, 영화"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp"
                    android:text="kpop, 기타곡, 소설책"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Hello World!를 하는 이유"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp"
                    android:text="많은 사람들을 만나며 다양한 경험을 하고싶음"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="호스트에게 해줄 수 있는 것"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="10dp"
                    android:text="한국의 문화, 여행다닌 국가에 대한 이야기"/>

        </LinearLayout>

    </ScrollView>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="숙박 요청하기"
            android:layout_gravity="bottom"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_light"
    />


</LinearLayout>