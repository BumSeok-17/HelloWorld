<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddEventActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/ic_arrow_back_black_24dp"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:scaleType="fitCenter"
                    android:id="@+id/backtoEVlist"
            />
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
            />

        </LinearLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="15"
                android:padding="20dp"
                android:background="#16a085"
        >
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
            >
                <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                >
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:layout_margin="8dp"
                            android:background="@android:color/black"
                    />
                    <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:background="@android:color/white"
                            android:id="@+id/addEventImg"
                    />
                    <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_photo_library_black_24dp"
                            android:layout_margin="20dp"
                            android:id="@+id/eventPhotolib"
                    />
                </FrameLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="Name"
                            android:textSize="20sp"
                            android:gravity="fill"
                            android:textColor="@android:color/black"
                            android:layout_marginRight="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/border_right"/>
                    <EditText
                            android:id="@+id/addEvNameEdit"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/background_light"
                            android:hint="이벤트명을 입력하세요."/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="Address"
                            android:textSize="16sp"
                            android:gravity="fill"
                            android:textColor="@android:color/black"
                            android:layout_marginRight="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/border_right"/>
                    <EditText
                            android:inputType="textMultiLine"
                            android:lines="1"
                            android:minLines="1"
                            android:maxLines="3"
                            android:id="@+id/addEvAddrEdit"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/background_light"
                            android:hint="ex ) 서울 양천구 신정동 한신포차"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="Date"
                            android:textSize="16sp"
                            android:gravity="fill"
                            android:textColor="@android:color/black"
                            android:layout_marginRight="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/border_right"/>
                    <EditText
                            android:id="@+id/addEvDateEdit"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/background_light"
                            android:hint="ex ) 2019년 06월 21일 18시"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:paddingStart="10dp"
                        android:gravity="center_vertical">
                    <TextView
                            android:text="Personnel"
                            android:textSize="16sp"
                            android:gravity="fill"
                            android:textColor="@android:color/black"
                            android:layout_marginRight="15dp"
                            android:layout_width="100dp"
                            android:layout_height="25dp"
                            android:background="@drawable/border_right"/>
                    <EditText
                            android:id="@+id/addEvPeopleEdit"
                            android:textSize="16sp"
                            android:gravity="center_vertical"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/background_light"
                            android:hint="ex ) 20"/>
                </LinearLayout>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/white"
                        android:hint="이벤트를 소개하세요."
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:inputType="textMultiLine"
                        android:lines="5"
                        android:maxLines="10"
                        android:id="@+id/addEvGreetEdit"
                />

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/rounded"
                        android:text="Save"
                        android:id="@+id/eventSaveBtn"
                />


            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>